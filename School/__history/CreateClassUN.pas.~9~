unit CreateClassUN;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.WinXPickers, Vcl.ComCtrls, Data.DB, Vcl.Grids, Vcl.DBGrids, Data.Win.ADODB,
  DMUN;

type
  TFmCreateClass = class(TForm)
    Main_PNL: TPanel;
    Create_PNL: TPanel;
    Header_PNL: TPanel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    DateTimePicker1: TDateTimePicker;
    TimePicker1: TTimePicker;
    Button1: TButton;
    Delete_BTN: TButton;
    Button3: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    DBGrid1: TDBGrid;
    Class_QRY: TADOQuery;
    Class_DS: TDataSource;
    Class_QRYIDClass: TWideStringField;
    Class_QRYClassName: TWideStringField;
    procedure FormShow(Sender: TObject);


  private
    { Private declarations }
    Procedure RunQuery;
  public
    { Public declarations }
  end;

var
  FmCreateClass: TFmCreateClass;

implementation

{$R *.dfm}



procedure TFmCreateClass.FormShow(Sender: TObject);
begin
 RunQuery;
end;


Procedure TFmCreateClass.RunQuery;
begin
  With Class_QRY Do
    begin
      SQL.Clear;
      SQL.Add('Select * from Classes');
      Open;
    end;
end;





end.



